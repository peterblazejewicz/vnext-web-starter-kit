{
  "version": "0.1-alpha-*",
  "dependencies": {
    "Microsoft.AspNet.Server.IIS": "1.0.0-beta1",
    "Microsoft.AspNet.Diagnostics": "1.0.0-beta1",
    "Microsoft.AspNet.Hosting": "1.0.0-beta1",
    "Microsoft.AspNet.Server.WebListener": "1.0.0-beta1",
    "Microsoft.AspNet.StaticFiles": "1.0.0-beta1",
    "Kestrel": "1.0.0-beta1",
    "kmon": "0.3.0"
  },
  "commands": {
    "web": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.WebListener --server.urls http://localhost:3000",
    "kestrel": "Microsoft.AspNet.Hosting --server Kestrel --server.urls http://localhost:3000",
    "watch" : "kmon --server kestrel"
  },
  "frameworks": {
    "aspnet50": {}
  },
  "scripts": {
    "postrestore": [
      "npm install"
    ]
  },
  "webroot": "wwwroot"
}